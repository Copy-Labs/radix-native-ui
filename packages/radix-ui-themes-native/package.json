{
  "name": "@radix-ui/themes-native",
  "version": "0.1.0",
  "description": "Radix Themes for React Native and Expo",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pnpm exec tsc",
    "dev": "pnpm exec tsc --watch",
    "build:tsdown": "tsdown",
    "dev:tsdown": "tsdown --watch",
    "test": "jest",
    "yalc:publish": "yalc publish",
    "yalc:push": "yalc push",
    "yalc:watch": "yalc publish --watch",
    "dev:for-demo-app": "pnpm dev:tsdown && pnpm yalc:watch"
  },
  "peerDependencies": {
    "expo": ">=48",
    "react": ">=18",
    "react-native": ">=0.70"
  },
  "dependencies": {
    "react-native-modal": "^13.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.0",
    "@types/react": "^19.0.2",
    "jest": "^29.6.0",
    "react": "^18.2.0",
    "react-native": "^0.73.0",
    "react-test-renderer": "^18.2.0",
    "tsdown": "^0.20.1",
    "typescript": "^5.1.0"
  },
  "license": "MIT"
}
